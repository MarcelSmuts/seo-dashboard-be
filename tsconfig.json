{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "allowJs": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "typeRoots": ["src/@types",
      "./node_modules/@types"]
  },
  "include": [
    "src/**/*" ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}